<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.ToggleButtonGroup?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="workCardRootAnchorPane" prefHeight="225.0" prefWidth="513.0" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projectgain.controller.WorkCardController">
   <children>
      <VBox prefHeight="225.0" prefWidth="513.0" style="-fx-background-color: yellow;" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="10.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <TextField fx:id="cardTitleTextField" alignment="CENTER" prefHeight="45.0" prefWidth="356.0" promptText="Work">
                     <opaqueInsets>
                        <Insets bottom="10.0" top="10.0" />
                     </opaqueInsets>
                  </TextField>
               </children>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="44.0" prefWidth="356.0">
               <children>
                  <ToggleButtonGroup prefHeight="44.0" prefWidth="120.0" selectionType="SINGLE">
                     <toggles>
                        <ToggleButton fx:id="cardSetToggleButton" mnemonicParsing="false" prefHeight="49.0" prefWidth="82.0" text="Set" textAlignment="JUSTIFY" />
                        <ToggleButton fx:id="cardTimeToggleButton" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="49.0" prefWidth="93.0" text="Time" textAlignment="JUSTIFY" />
                     </toggles>
                     <opaqueInsets>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </opaqueInsets>
                  </ToggleButtonGroup>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefHeight="37.0" prefWidth="356.0">
               <children>
                  <Spinner fx:id="cardSetTimeSpinner" editable="true" prefHeight="32.0" prefWidth="323.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="83.0" prefWidth="356.0">
               <children>
                  <ButtonBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0">
                    <buttons>
                        <Button fx:id="cardSaveButton" mnemonicParsing="false" text="Save" />
                        <Button fx:id="cardCopyButton" contentDisplay="RIGHT" mnemonicParsing="false" text="Copy" />
                      <Button fx:id="cardDeleteButton" alignment="CENTER" mnemonicParsing="false" onAction="#onCardDeleteButtonPressed" text="Delete" />
                    </buttons>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </ButtonBar>
                  <VBox prefHeight="79.0" prefWidth="113.0">
                     <children>
                        <Label fx:id="cardBGColorSelectLabel" alignment="CENTER" prefHeight="28.0" prefWidth="122.0" text="Card Color">
                           <padding>
                              <Insets bottom="5.0" top="5.0" />
                           </padding>
                        </Label>
                        <ColorPicker fx:id="cardBGColorSelectColorPicker" prefHeight="26.0" prefWidth="117.0" promptText="Card Color" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <opaqueInsets>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </opaqueInsets>
</AnchorPane>
